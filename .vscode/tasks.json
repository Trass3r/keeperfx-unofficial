{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build debug",
			"type": "shell",
			"command": "make CROSS_COMPILE=i686-w64-mingw32- DEBUG=1 -j8 -k heavylog",
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "build release",
			"type": "shell",
			"command": "make CROSS_COMPILE=i686-w64-mingw32- -j8 standard",
			"problemMatcher": ["$gcc"],
			"group": "build",
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make CROSS_COMPILE=i686-w64-mingw32- clean",
			"problemMatcher": ["$gcc"],
			"group": "build",
		},
	]
}